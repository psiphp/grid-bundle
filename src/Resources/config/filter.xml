<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="psi_grid.filter_registry" class="Psi\Component\Grid\FilterRegistry" />

        <service id="psi_grid.filter_form_factory" class="Psi\Component\Grid\FilterFormFactory">
            <argument type="service" id="form.factory" />
            <argument type="service" id="psi_grid.filter_registry" />
        </service>

        <!-- Filters -->
        <service id="psi_grid.filter.string" class="Psi\Component\Grid\Filter\StringFilter">
            <tag name="psi_grid.filter" alias="string" />
        </service>

        <service id="psi_grid.filter.number" class="Psi\Component\Grid\Filter\NumberFilter">
            <tag name="psi_grid.filter" alias="number" />
        </service>

        <service id="psi_grid.filter.boolean" class="Psi\Component\Grid\Filter\BooleanFilter">
            <tag name="psi_grid.filter" alias="boolean" />
        </service>

    </services>

</container>

